<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyingImprovement.SettingPage"
             Title="SettingPage">
    <VerticalStackLayout>
        <Label 
            Text="Always download video and audio in mobile network"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Switch
            VerticalOptions="Center" 
            HorizontalOptions="Center" IsToggled="{Binding ForceDownloadMovie}"/>
    </VerticalStackLayout>
</ContentPage>