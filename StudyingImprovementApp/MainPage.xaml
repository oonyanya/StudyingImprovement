<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ejs="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="StudyingImprovement.MainPage">

    <AbsoluteLayout>
        <ejs:HybridWebView x:Name="WebView" StartPath="https://member.studying.jp"  AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="SizeProportional"/>
        <Frame BackgroundColor="#80000000" x:Name="ActivityIndicator"  AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <ActivityIndicator IsRunning="True" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>   
        </Frame>
    </AbsoluteLayout>

</ContentPage>
